@model ItemList<Category>
@using System;
  <h2 class="col-3">Ctegories</h2>
  
  <table class="table table-bordered table-striped">
      <thead>
          <tr>
              <th>Id</th>
              <th class="text-center font-weight-bolder">Name</th>
              <th>Picture</th>
              <th></th>
          </tr>
      </thead>
      <tbody>
          @foreach (var category in Model.Items) {
              <tr>
                  <td class="text-left font-weight-bolder">@category.CategoryId</td>
                  <td class="col-7"><a class="text-dark font-weight-bolder"
                          asp-controller="Category"
                          asp-action="Category"
                          asp-route-id="@category.CategoryId">@category.CategoryName</a>
                          <p><em>@category.Description</em></p>
                  </td>
                  <td class="col-3">
                      <img src="data:image/bmp;base64, @Convert.ToBase64String(category.Picture)"
                      class="img-thumbnail border-dark" width="90px" alt="picture @category.CategoryId"/>

                      <a class="btn btn-danger btn-sm float-right align-top col-3"
                        asp-controller="Category"
                        asp-action="RemovePicture"
                        asp-route-categoryId="@category.CategoryId">Remove this picture</a>
                  </td>
                  <td class="col-1">
                    <a class="btn btn-danger btn-sm btn-block"
                        asp-controller="Category"
                        asp-action="Remove"
                        asp-route-id="@category.CategoryId">Remove</a>
                  </td>
              </tr>
          }
      </tbody>
  </table>

<a class="col-5 btn btn-primary btn-lg" asp-controller="Category" asp-action="CreateCategory">Add new category</a>

<div page-model="@Model.PagingInfo" page-action="Categories" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     class="btn-group float-right m-1">
</div>
