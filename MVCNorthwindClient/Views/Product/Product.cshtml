@model Product

<form id="@Model.ProductId" method="post" asp-action="Update" asp-controller="Product" asp-route-productId="@Model.ProductId" asp-antiforgery="true">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>ProductId</td>
                <td>#@Model.ProductId</td>
            </tr>
        </thead>
        <tr>       
            <td><label class="form-label" asp-for="ProductName"></label></td>
            <td><input class="form-control" type="text" asp-for="ProductName"/></td>
        </tr>
        <tr>
            <td><label class="form-label" asp-for="SupplierId"></label></td>
            <td><input class="form-control" asp-for="SupplierId"/></td>
        </tr>
        <tr>
            <td><label class="form-label" asp-for="QuantityPerUnit"></label></td>
            <td><input class="form-control" type="text" asp-for="QuantityPerUnit"/></td>
        </tr>
        <tr>
            <td><label class="form-label" asp-for="UnitPrice"></label></td>
            <td><input class="form-control" asp-for="UnitPrice"/></td>
        </tr>
        <tr>
            <td><label class="form-label" asp-for="UnitsInStock"></label></td>
            <td><input class="form-control" asp-for="UnitsInStock"/></td>
        </tr>        
    </table>
    <div class="form-check mb-1">
        <input class="form-check-input" type="checkbox" asp-for="Discontinued"/>
        <label class="form-check-label" asp-for="Discontinued"></label>
    </div>
    <button type="submit" class="btn btn-primary ">Save changes</button>
</form>